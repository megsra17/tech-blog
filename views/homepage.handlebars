<h1>Blogs</h1>

{{#each blogs}}
<a href="/blog/{{id}}">
<div class="card">
    <div class="row card-header">
        <div class="col-lg-6">
            <h5>{{title}}</h5>
        </div>
        <div class="col-lg-6">
        <p> Posted by: {{user.username}} on {{date_created}}</p>
        </div>
    </div>
   
    <div class="card-body">
        <p class="card-text">{{content}}</p>
    </div>
</div>
</a>
{{/each}}