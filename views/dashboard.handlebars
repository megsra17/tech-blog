{{!-- blog posts --}}
<div id="blogPosts">
    {{#each blogs}}
    <a href="/blog/{{id}}">
        <div class="card">
            <div class="row card-header">
                <div class="col-lg-6">
                    <h5>{{title}}</h5>
                </div>
                <div class="col-lg-6">
                    <p> Posted by: {{user.username}} on {{date_created}}</p>
                </div>
            </div>
    
            <div class="card-body">
                <p class="card-text">{{content}}</p>
                
            </div>
        </div>
    </a>
    {{/each}}
</div>

{{!-- create posts --}}
<div class="container">
    <div id="createPost" class="card text-black invisible">
        <div class="card-header">
            <h4>Create New Post</h4>
            <button type="button" id="exitCreate" class="btn-close bg-light" aria-label="Close"></button>
        </div>
        <div
            class="card-body">
            <form id="createBlog">
                <div class="mb-3 mx-2 text-start text-dark">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" name="title">
                </div>
                <div class="mb-3 mx-2 text-start text-dark">
                    <label for="content" class="form-label">Content</label>
                    <textarea type="text" class="form-control" name="content"></textarea>
                </div>
                <button type="submit" class="btn btn-primary w-25">Create</button>
            </form>
        </div>
    </div>

    {{!-- edit blog --}}
    <div id="editBlog" class="card text-black invisible">
        <div class="card-header">
            <h4>Edit Blog</h4>
            <button type="button" id="exitEdit" class="btn-close bg-light" aria-label="Close"></button>
        </div>
        <div
            class="card-body text-center">
            <form id="editBlog">
                <div class="mb-3 mx-2 text-start text-dark">
                    <label for="title" class="form-label">Title</label>
                    <input id="title" type="text" class="form-control" name="title" value="">
                </div>
                <div class="mb-3 mx-2 text-start text-dark">
                    <label for="content" class="form-label">Content</label>
                    <textarea id="content" type="text" class="form-control" name="content"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Update Blog</button>
                <button type="submit" class="btn btn-primary">Delete</button>
            </form>
        </div>
    </div>
</div>


<button id="newBlog" type="button" class="btn btn-primary">
    New Blog</button>
<a href="#" id="newBlog" class="btn btn-primary">New Blog</a>

<script src="/js/dashboard.js"></script>